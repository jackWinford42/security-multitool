{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    },
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 30,
      "format": "email"
    },
    "profile_pic": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "password",
    "email",
    "profile_pic"
  ]
}
